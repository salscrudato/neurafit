# NeuraFit Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API keys
# Use test keys for development, production keys for production
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Price IDs
# Get these from Stripe Dashboard > Products > [Your Product] > Pricing
VITE_STRIPE_PRICE_ID_SIMPLE=price_your_price_id_here

# Environment
# Options: development, staging, production
VITE_APP_ENV=development

# Sentry Configuration (optional)
# Get DSN from Sentry.io > Project Settings > Client Keys (DSN)
VITE_SENTRY_DSN=
VITE_ENABLE_SENTRY=false

# Feature Flags - Adaptive Personalization
# Enable/disable adaptive workout personalization features
VITE_ADAPTIVE_PERSONALIZATION_ENABLED=true
VITE_ADAPTIVE_FEEDBACK_UI_ENABLED=true
VITE_ADAPTIVE_CALIBRATION_ENABLED=true
VITE_ADAPTIVE_TELEMETRY_ENABLED=true

# Feature Flags - General
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true

# Cloud Functions
# URL for workout generation function
VITE_WORKOUT_FN_URL=

# API Configuration (optional)
# VITE_API_BASE_URL=https://api.example.com
